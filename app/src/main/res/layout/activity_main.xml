<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.amr1.reglogsalim3dd.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/re_1">

        <ImageView
            android:background="#8d000000"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:src="@drawable/amr2"
            android:id="@+id/img_amr2"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_welcome"
            android:text="مرحبا بك"
            android:layout_marginTop="10dp"
            android:textColor="#4964ec"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_below="@+id/img_amr2"
            android:layout_centerHorizontal="true"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@id/re_1"
        android:id="@+id/lin_1"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:id="@+id/btn_go_register"
            android:text="أشتراك"
            android:onClick="btn_Go_Registration"
            android:textStyle="bold"
            android:textSize="18sp"
            android:background="#a8774494"/>

        <Button
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:text="تسجيل دخول"
            android:onClick="btn_show_lyLogin"
            android:id="@+id/vis_lin_login"
            android:textStyle="bold"
            android:textSize="18sp"
            android:background="#a873782d"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ly_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/lin_1"
        android:padding="10dp"
        android:orientation="vertical"
        android:gravity="center"

        >

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:hint="البريد"
            android:id="@+id/Login_EIXT_Name"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:hint="الرقم السري"
            android:id="@+id/Login_EIXT_Password"/>

        <CheckBox
            android:id="@+id/chk_remember"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="تذكرنى"
            android:checked="true"
            android:textOff="نعم"
            android:textOn="لا"/>

        <Button
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:text="دخول"
            android:onClick="Login_btn_Login"
            android:id="@+id/btn_login"
            android:textStyle="bold"
            android:textSize="18sp"
            android:background="#b294292e"/>

    </LinearLayout>





</RelativeLayout>
